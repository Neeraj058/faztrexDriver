<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/rv_main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@mipmap/bg_splash"
        android:backgroundTint="@color/colorPrimary"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_splash_logo"
            android:layout_width="@dimen/size_200dp"
            android:layout_height="@dimen/size_50dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/size_70dp"
            android:background="@drawable/faztrex_banner"
            android:contentDescription="@string/image_description"
            android:scaleType="centerCrop" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_loading_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/size_65dp"
            android:layout_marginBottom="@dimen/size_30dp"
            android:text="Please wait..."
            android:textAppearance="@style/TextStyleSemiBold"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/text_14sp"
            tools:ignore="HardcodedText" />

    </RelativeLayout>

</layout>

