<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_45dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_child_icon"
            android:layout_width="@dimen/size_16dp"
            android:layout_height="@dimen/size_16dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/size_40dp"
            android:contentDescription="@string/image_description"
            android:src="@drawable/ic_dashboard"
            android:tint="@color/colorTextDarkGrey" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_child_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/size_10dp"
            android:layout_toEndOf="@+id/iv_child_icon"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingStart="@dimen/size_4dp"
            android:paddingEnd="@dimen/size_4dp"
            android:textAppearance="@style/TextStyleSemiBold"
            android:textColor="@color/colorTextDarkGrey"
            android:textSize="@dimen/text_12sp"
            tools:text="Dashboard" />

    </RelativeLayout>

</layout>

